<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.karunendu.qshare.UserTypeActivity"
    tools:showIn="@layout/activity_user_type">

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_for_faculty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/for_faculty"
            android:textSize="25sp"
            android:clickable="true"
            android:onClick="onFaculty"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/icn_faculty"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_for_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/for_student"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp"
            android:clickable="true"
            android:onClick="onStudent"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/icn_student"
            android:textStyle="bold"/>

    </LinearLayout>

</RelativeLayout>
