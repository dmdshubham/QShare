<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/edit_profile_pic"
            android:src="@drawable/icn_faculty"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="4dp"
            android:layout_marginTop="10dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="9"
            android:layout_gravity="center_horizontal"
            app:civ_shadow_color="#8BC34A"/>

        <com.malmstein.floatinghints.FloatingHintEditTextLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">
            <EditText

                android:id="@+id/float_ca_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:inputType="textPersonName" />

        </com.malmstein.floatinghints.FloatingHintEditTextLayout>

        <com.malmstein.floatinghints.FloatingHintEditTextLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">
            <EditText

                android:id="@+id/float_ca_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:enabled="false"
                android:inputType="textEmailAddress" />

        </com.malmstein.floatinghints.FloatingHintEditTextLayout>
        <com.malmstein.floatinghints.FloatingHintEditTextLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">
            <EditText

                android:id="@+id/float_ca_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:inputType="phone" />

        </com.malmstein.floatinghints.FloatingHintEditTextLayout>



       <TextView
           android:text="Department"
           android:textSize="14sp"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

            <TextView
            android:text="Designation"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <Button
            android:id="@+id/btn_ca"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:text="Update"
            android:textAllCaps="false"
            android:onClick="OnUpdate"
                android:textSize="20sp"
                android:textColor="@color/app_bg"
            android:background="@color/colorPrimaryDark"
            android:layout_height="wrap_content" />


        </LinearLayout>
</ScrollView>