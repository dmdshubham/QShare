<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="20dp"
    android:paddingTop="30dp"
    android:background="#34495e"
    tools:context="com.karunendu.qshare.ContactActivity"
    android:paddingStart="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:text="Centre of Computer Education,"
        android:textColor="#FFFFFF"/>


    <Button
        android:id ="@+id/push_button1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/button_bg_round"
        android:padding="15dp"
        android:drawableStart="@mipmap/ic_launcher1"
        android:onClick="OnClick2"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="39dp" />

    <Button
        android:id ="@+id/push_button2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/button_bg_round"
        android:padding="15dp"
        android:drawableLeft="@mipmap/ic_launcher2"
        android:onClick="onClick1"
        android:layout_marginStart="37dp"
        android:layout_alignBottom="@+id/push_button1"
        android:layout_alignStart="@+id/textView"
        android:drawableStart="@mipmap/ic_launcher2" />


    <TextView
        android:text="Institute of Professional Studies,"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView" />

    <TextView
        android:text="University of Allahabad,"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/push_button2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:text="(U.P.), India."
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:text="cceuoa@gmail.com"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:text="+91-532-2460196 (Office)"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
