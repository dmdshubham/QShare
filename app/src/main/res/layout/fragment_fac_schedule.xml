<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="Select Date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/schedule_select_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:text="Choose"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/schedule_container"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="invisible"
        android:layout_height="wrap_content">
        <TextView
            android:text="First Session"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/schedule_time1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:text="Choose Time"/>
            <Spinner
                android:id="@+id/schedule_place1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:entries="@array/place_array"
                android:layout_height="wrap_content"></Spinner>
            <Spinner
                android:id="@+id/schedule_sem1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:entries="@array/sem_array"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"></Spinner>
        </LinearLayout>
        <TextView
            android:text="Second Session"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/schedule_time2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:text="Choose Time"/>
            <Spinner
                android:id="@+id/schedule_place2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:entries="@array/place_array"
                android:layout_height="wrap_content"></Spinner>
            <Spinner
                android:id="@+id/schedule_sem2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:entries="@array/sem_array"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"></Spinner>
        </LinearLayout>
        <TextView
            android:text="Third Session"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/schedule_time3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:text="Choose Time"/>
            <Spinner
                android:id="@+id/schedule_place3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:entries="@array/place_array"
                android:layout_height="wrap_content"></Spinner>
            <Spinner
                android:id="@+id/schedule_sem3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:entries="@array/sem_array"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"></Spinner>
        </LinearLayout>
        <TextView
            android:text="Fourth Session"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/schedule_time4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:text="Choose Time"/>
            <Spinner
                android:id="@+id/schedule_place4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:entries="@array/place_array"
                android:layout_height="wrap_content"></Spinner>
            <Spinner
                android:id="@+id/schedule_sem4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:entries="@array/sem_array"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"></Spinner>
        </LinearLayout>

        <Button
            android:id="@+id/schedule_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:text="Done"/>
    </LinearLayout>

</LinearLayout>